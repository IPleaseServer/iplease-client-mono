{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "tags": ["styled", "css"]
      }
    ],
    "baseUrl": ".",
    "paths": {
      "components/*": ["./src/components/*"],
      "hooks/*": ["./src/hooks/*"],
      "shared/*": ["./src/shared/*"],
      "assets/*": ["./src/assets/*"],
      "types/*": ["./src/types/*"]
    }
  },
  "include": ["../common-styles/src/emotion.d.ts", "src/**/*", "@types/*"]
}
